<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teinproductions.tein.pitrainer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:windowSoftInputMode="stateHidden"
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddNumberActivity"
            android:label="@string/title_activity_add_number" />

        <activity
            android:name=".NumbersActivity"
            android:label="@string/title_activity_numbers"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".keyboard.ChooseKeyboardActivity"
            android:label="@string/choose_keyboard_layout" />

        <activity android:name=".keyboard.KeyboardSizeActivity"
            android:label="@string/keyboard_size" />

        <!-- FOR DEBUGGING: REMOVE WHEN RELEASING-->
        <meta-data android:name="firebase_crashlytics_collection_enabled" android:value="false" />
        <!-- Replace with AdMob App ID before release. Sample ad: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>
    </application>
</manifest>
